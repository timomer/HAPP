<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag_openaps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:id="@+id/apsstatus"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/apsstatus_Action"
                android:text="-"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="action"
                android:textSize="12sp"
                android:textColor="#B8B8B8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/apsstatus_reason"
                android:text="-"
                android:gravity="bottom"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="reason"
                android:textSize="12sp"
                android:textColor="#B8B8B8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/apsstatus_Temp"
                        android:text="-"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="suggested basal"
                        android:textSize="12sp"
                        android:textColor="#B8B8B8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/apsstatus_deviation"
                        android:text="-"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="deviation"
                        android:textSize="12sp"
                        android:textColor="#B8B8B8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/apsstatus_mode"
                        android:text="-"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="mode"
                        android:textSize="12sp"
                        android:textColor="#B8B8B8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/apsstatus_loop"
                        android:text="-"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="loop"
                        android:textSize="12sp"
                        android:textColor="#B8B8B8"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Accept Temp"
                android:onClick="apsstatusAccept"
                android:layout_weight=".5"
                android:id="@+id/apsstatusAcceptButton"
                android:enabled="false"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Run OpenAPS"
                android:onClick="runOpenAPS"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TEST"
                android:onClick="test"
                android:layout_weight=".2"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>